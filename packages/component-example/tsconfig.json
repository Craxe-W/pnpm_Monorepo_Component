{
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES6",
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react",
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": [
      "ES2015",
      "DOM"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
  },
  "include": [
    "src/**/*",
    "global",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist",
    ".dumi"
  ],
}
