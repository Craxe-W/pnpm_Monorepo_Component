{
  "compilerOptions": {
    "outDir": "./lib",
    "rootDirs": [
      "src",
      "config"
    ],
    "target": "ES6",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "declaration": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "baseUrl": "./",
    "typeRoots": [
      "./src/typings"
    ],
    "lib": [
      "ES2017",
      "DOM"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "es",
    "dist"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS",
      "resolveJsonModule": true,
      "noImplicitAny": false
    }
  }
}
